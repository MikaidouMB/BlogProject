{% extends 'base.html.twig' %}
{% block body %}
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <ul class="nav flex-column mb-2" >
                <li><a href="index.php?route=adminPostList">Articles</a></li>
                <li><a href="index.php?route=adminPostcomments">Commentaires</a></li>
                <li><a href="index.php?route=adminPostUsers">Utilisateurs</a></li>
            </ul>
        </div>
    </div>
    <div class="container">
        <div class="container mt-6">

            <h1>Gérer les commentaires</h1>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Auteur</th>
                    <th>Contenu</th>
                    <th>Actions</th>
                </thead>
                        {% for comment in comments %}
                    <td>{{ comment.username }}</td>
                    <td>{{ comment.content }}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">

                        <a href="index.php?route=editComment&id={{ comment.id }}" class="btn btn-warning btn-lg active" role="button" aria-pressed="true">Modifier</a>
                        <a href="index.php?route=deleteComment&id={{ comment.id }}"
                           onclick="return confirm('Voulez-vous effacer le commentaire n°{{ comment.id }} ?')"
                           class="btn btn-danger btn-lg active" role="button" aria-pressed="true">Supprimer</a>
                        </div>
                    </td>

                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}