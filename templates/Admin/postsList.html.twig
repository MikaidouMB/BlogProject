{% extends 'base.html.twig' %}
{% block body %}
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <ul class="nav flex-column mb-2" >
                <li><a href="index.php?route=adminPostList">Articles</a></li>
                <li><a href="index.php?route=adminPostcomments">Commentaires</a></li>
                <li><a href="index.php?route=adminPostUsers">Utilisateurs</a></li>
            </ul>
        </div>
    </div>
<!-- Page content-->
   <div class="container mt-6">

       <h1>Gérer les articles</h1>

       <table class="table table-striped">
           <thead>
               <tr>
                   <th>Titre</th>
                   <th>Auteur</th>
                   <th>Contenu</th>
                   <th>Actions</th>
           </thead>
           {% for post in posts %}
                   <td>{{ post.title }}</td>
                   <td>{{ post.author }}</td>
                   <td>{{ post.content }}</td>
                   <td>
                       <a href="index.php?route=editAdminPost&id={{ post.id }}" class="btn btn-warning btn-lg active" role="button" aria-pressed="true">Modifier</a>
                       <a href="index.php?route=deleteAdminPost&id={{ post.id }}"
                          onclick="return confirm('Voulez-vous effacer l\'article n°{{ post.title }} ?')"
                          class="btn btn-danger btn-lg active" role="button" aria-pressed="true">Supprimer</a>
                   </td>

               </tr>
           {% endfor %}
       </table>
   </div>
{% endblock %}