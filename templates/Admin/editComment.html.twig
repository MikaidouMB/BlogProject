{% extends 'base.html.twig' %}
    {% block body %}

        <div class="container">
            <form action="index.php?route=editComment&id={{ comment.id }}" method="post">
                <div class="form-group">
                    <textarea class="form-control" name="content" id="content" rows="3" placeholder="Contenu de l'article">{{ comment.content }}</textarea>
                </div>
                <div class="col-auto my-1">
                    <button type="submit" class="btn btn-primary">Publier</button>
                </div><br>
            </form>
        </div>
    {% endblock %}