{% extends 'base.html.twig' %}
    {% block body %}
        {{ dump() }}
        <div class="container">
            <form action="index.php?route=editPost&id={{ post.id }}" method="post">
                <div class="input-field col s12 m6 l6">
                    <input type="text" name="title" id="title" class="form-control" placeholder="Titre de l'article" value="{{ post.title }}">
                </div><br>
                <div class="form-group">
                    <textarea class="form-control" name="content" id="content" rows="3" placeholder="Contenu de l'article">{{ post.content }}</textarea>
                </div>
                <div class="col-auto my-1">
                    <button type="submit" class="btn btn-primary">Publier</button>
                </div><br>
            </form>
        </div>
    {% endblock %}