{% extends 'base.html.twig' %}

{% block body %}
    <div class="container cta-100 ">
    <div class="container">
        <div class="row blog">
            <div class="col-md-12">
                <div id="blogCarousel" class="carousel slide container-blog" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#blogCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#blogCarousel" data-slide-to="1"></li>
                    </ol>
                    <!-- Carousel items -->
                    <a href="index.php?route=addPost" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Ajouter</a>
                    <hr>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="row">
                                {% for post in posts %}
                                {# {% for user in user %} #}
                                <div class="col-md-3" >
                                    <div class="item-box-blog">
                                        <div class="item-box-blog-image">
                                            <!--Date-->
                                            <div class="item-box-blog-date bg-blue-ui white"> {{ post.createdAt|date('H:i:s d/m-Y') }}</div>
                                            <!--Image-->
                                            <figure> <img alt="" src="https://cdn.pixabay.com/photo/2017/02/08/14/25/computer-2048983_960_720.jpg" style="width: 150px"> </figure>
                                        </div>
                                        <div class="item-box-blog-body">
                                            <!--Heading-->
                                            <div class="item-box-blog-heading">
                                                <a href="" tabindex="0">
                                                        {{ post.title }}
                                                </a>
                                            </div>
                                            <!--Data-->
                                            <div class="item-box-blog-data" style="padding: px 15px;">
                                                <p><i class="fa fa-user-o"></i> {# {{ user.first_name }} #} <i class="fa fa-comments-o"></i> Comments(3)</p>
                                            </div>
                                            <!--Text-->
                                            <div class="item-box-blog-text">
                                                {{ post.content }}
                                            </div>
                                            <div class="mt">
                                                <a href="index.php?route=post&id={{ post.id }}" tabindex="0" class="btn bg-blue-ui white read">read more</a>
                                            </div>
                                            <!--Read More Button-->
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                            <!--.row-->
                        </div>
                        <!--.item-->
                        <div class="carousel-item ">
                            <!--.row-->
                        </div>
                        <!--.item-->
                    </div>
                    <!--.carousel-inner-->
                </div>
                <!--.Carousel-->
            </div>
        </div>
    </div>
</div>
{% endblock %}