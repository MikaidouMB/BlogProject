{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <div class="col-md-10 blogShort">
        <h1>{{ post.title }}</h1>
        <article><p>{{ post.content }}</p></article>

        <strong><p >{{ post.author  }}</p></strong>
    {% if session is empty %}
        <a class="nav-link" href="index.php?route=login">Se connecter</a> ou <a class="nav-link" href="index.php?route=signUp">S'inscrire </a>
    pour commenter
    <hr>
    {% endif %}
        <section class="gradient-custom">
            <div class="container my-5 py-5">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-12 col-lg-10 col-xl-8">
                        <div class="card">
                            <div class="card-body p-4">
                                <h4 class="text-center mb-4 pb-2">Commentaires</h4>
                                <hr>
                                <div class="row">
                                    <div class="col">
                                {% for comment in comments %}

                                        <div class="d-flex flex-start">
                                            <div class="flex-grow-1 flex-shrink-1">
                                                <div>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <p class="mb-1">
                                                            <strong>{{ comment.username }}</strong> <span class="small"> Le {{ comment.createdAt|date('d/m/Y') }} à {{  comment.createdAt|date('H:i:s') }} </span>
                                                        </p>
                                                    </div>
                                                    <p class="small mb-0">
                                                        {{ comment.content }}
                                                    </p>
                                                </div>
                                                <hr>
                                                {% endfor %}
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </section>
    </div>
        </div>
    {% if session is not empty %}

    <form action="index.php?route=addComment&post&id={{ post.id }}" method="post">
        <div class="form-group">
            <textarea class="form-control" name="content" id="content" rows="3" placeholder="Contenu du commentaire"></textarea>
        </div>
        <div class="col-auto my-1">
            <button type="submit" class="btn btn-primary">Publier</button>
        </div><br>
        <hr>
        <a href="index.php?route=posts" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">précedent</a>
    </form>
    {% endif %}
{% endblock %}
