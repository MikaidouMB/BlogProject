{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
     {% if session.newsession.id == post.userId %}
    <a href="index.php?route=editPost&id={{ post.id }}" class="btn btn-warning btn-lg active" role="button" aria-pressed="true">Modifier</a>
    <a href="index.php?route=deletePost&id={{ post.id }}" class="btn btn-danger btn-lg active" role="button" aria-pressed="true">Supprimer</a>
    {% endif %}
    <hr>
    <h1>{{ post.title }}</h1>

    <h2 class="item-box-blog-text">
        {{ post.content }}
    </h2>
    <p>{{ user.username  }}</p>

    <hr>
    <h3>Commentez l'article</h3>
    <form action="index.php?route=addComment" method="post">
        <div class="form-group">
            <textarea class="form-control" name="content" id="content" rows="3" placeholder="Contenu du commentaire"></textarea>
        </div>
        <div class="col-auto my-1">
            <button type="submit" class="btn btn-primary">Publier</button>
        </div><br>
        <hr>
        <a href="index.php?route=posts" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">pr√©cedent</a>
    </form>
</div>
{% endblock %}
